<%# <%= render 'form', secure_password: @secure_password %>

<div id="password_form_container">

    <form action="/secure_passwords" accept-charset="UTF-8" method="post">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        
        <div id="inputlist">
            <h1 id="newpasswordh1">Editing Secure Password</h1>
            <div class="input-group mb-3">
                <input  required type="text" class="form-control" value="<%=@secure_password.url%>" name="secure_password[url]" id="secure_password_url" >
            </div>
            

            <div class="input-group mb-3">
                <input type="text" class="form-control" value="<%=@secure_password.name%>" name="secure_password[name]" id="secure_password_name">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Notes</span>
                </div>
                <textarea class="form-control" type="text" name="secure_password[notes]" id="secure_password_notes"><%=@secure_password.notes%></textarea>
            </div>
            
            <div class="actions" style="margin-top:1rem">
                <input type="submit" class= "btn btn-dark" name="commit" value="Update Secure Password" data-disable-with="Create Secure password">
                <a href="/dashboard/index"><button type="button" class="btn btn-dark">Back</button></a>
            </div>
        </div>
        
    </form> 
</div>
